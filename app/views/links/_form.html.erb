<% form_for(@link, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :link, "Link URL (http://www.somelink.com)" %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :title, "Link Title" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Link Description" %><br />
    <%= f.text_area :description, :rows => 5, :cols => 28 %>
  </p>
  <p>
    <%= f.label :link_image, "Upload Link Image" %><br/>
    <%= f.file_field :link_image, :size => 16 %>
  </p>
  <p>
    <%= f.label "Select A Link Category" %><br />
    <%= collection_select(:link, :link_type_id, LinkType.all, :id, :link_type) %> or <%= link_to "Create a New Link Category", new_link_type_path %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>