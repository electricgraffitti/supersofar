<h1>Listing lyrics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Permalink</th>
    <th>Song</th>
  </tr>

<% @lyrics.each do |lyric| %>
  <tr>
    <td><%=h lyric.title %></td>
    <td><%=h lyric.description %></td>
    <td><%=h lyric.permalink %></td>
    <td><%=h lyric.song_id %></td>
    <td><%= link_to 'Show', lyric %></td>
    <td><%= link_to 'Edit', edit_lyric_path(lyric) %></td>
    <td><%= link_to 'Destroy', lyric, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New lyric', new_lyric_path %>