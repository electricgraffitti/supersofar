<div class="full_wrap">
  <% article.assets.each do |asset|%>
  <%= link_to image_tag(asset.attachment.url(:thumb), :alt => article.title, :class => "left image_wrap"), article_path(article) %>
  <% end %>
  <h2><%= link_to article.title, article_path(article) %></h2>
  <span class="author_text">
    <%= article.author_credentials %>
  </span><br/>
  <div class="description">
    <%= truncate(article.description, :length => 250) %>
  </div>
  <% if current_admin %>
    <div class="right">
      <%= link_to "Edit", edit_article_path(article) %> |
      <%= link_to "Delete", article, :confirm => "Are you sure?", :method => :delete %>
    </div>
  <% end %>
</div>
