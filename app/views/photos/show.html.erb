<% page_title(@photo.title)%>
<div class="header">
  <h2><%= (@photo.title) %></h2>
</div>
<%= render @photo %>
<div class="clear"></div>
<div class="grid_10">
  <%= render :partial => "comments/comment_block", :locals => {:model_object => @photo} %>
</div>
<div class="clear"></div>
<div class="full_wrap">
<% if current_admin %>
<%= link_to 'Edit Photo', edit_photo_path(@photo) %> |
<%= link_to 'Delete Photo', @photo, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back To Album', photo_album_path(@photo.photo_album) %>
</div>