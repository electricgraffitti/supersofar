<div class="full_wrap">
  <h2><%= post.title %></h2>
  <span class="author_text">
    <%= post.author_credentials %>
  </span><br/>
  <div class="description">
    <%= post.description %>
  </div>
  <div class="clear"></div>
  <div class="grid_10">
    <%= render :partial => "comments/comment_block", :locals => {:model_object => post} %>
  </div>
  <div class="clear"></div>
</div>