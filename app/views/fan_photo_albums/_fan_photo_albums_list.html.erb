<% current_fan.fan_photo_albums.each do |photo_album| %>
  <% unless photo_album.fan_photos.blank? %>
<div class="full_wrap mc_bg grid_11 alpha">  
  <div class="grid_5 alpha">
      <%= link_to image_tag(photo_album.fan_photos.first.fan_photo.url(:thumb), :alt => photo_album.name, :class => "left image_wrap"), photo_album %>
        <h3><%=h photo_album.name %></h3>
        <span class="author_text">Album created: <span class="red"><%=h (photo_album.created_at).to_s(:event_time) %></span></span>
        <span class="author_text"><%=h photo_album.fan_photos.count %> Photos in Album</span>
        
        <div class="left">
        <% if current_fan %>
        <%= link_to 'Edit', edit_fan_photo_album_path(photo_album) %> |
        <%= link_to 'Delete', photo_album, :confirm => 'All Photo will be deleted too. Are you sure?', :method => :delete %> |
        <% end %>
        <%= link_to 'View Album', photo_album %>
        </div>
        <div class="clear"></div>
      <% end %>
    <% end %>
  </div>
  <div class="clear"></div>
</div>
