<div class="full_wrap">
  <%= render :partial => "shows/show", :locals => {:show => @show } %>
  <% if current_admin %>
  <%= link_to 'Edit', edit_show_path(@show) %> |
  <%= link_to 'Destroy', @show, :confirm => 'Are you sure?', :method => :delete %> |
  <% end %>
  <%= link_to 'View All', shows_path %> |
  <%= link_to "Back", request.env["HTTP_REFERER"] %>
</div>